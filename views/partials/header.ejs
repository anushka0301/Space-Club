    <body>
        <div class="container-fluid" id="nav-container">
            <nav class="navbar navbar-expand-sm">    
                <a class="navbar-brand" href="/">
                    <img id="navbar-brand-logo" src="logo1.png" alt="logo" style="width:60px;">
                </a>
                <a href="/" style="text-decoration: none;"><span id="satish">Satish Dhawan Cell For Space Science</span></a>
                
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <% if(!currentUser){ %>
                            <a class="pull-right" href="/login" id="nav" style="font-size: 1.2rem;">ADMIN LOGIN</a>
                        <% }else{ %>
                            <a class="pull-right" href="/logout" id="nav" style="font-size: 1.2rem;">LOG OUT</a>
                        <% } %>
                    </li> 
                </ul>    
            </nav>
        </div>
         
        <div class="container" id="flash">
            <% if(success && success.length>0){ %>
                <div class="alert alert-success" role="alert"><%= success %></div>
            <% } %>
            <% if(error && error.length>0){ %>
                <div class="alert alert-danger" role="alert"><%= error %></div>
            <% } %>            
        </div>